                        <button class="btn btn-primary">Click Here</button>
                    </div>
                    <div class="col-md-6 text-center py-2">
                        {{!-- Right Side --}}

                        <img src="/static/images/img1.jpg" height="300px"
                            alt="this is images">

                    </div>
                </div>
            </div>
        </section>

        {{!-- banner3 section --}}

        <section class="banner2_section py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 text-center py-2">
                        {{!-- Left Side --}}

                        <img src="/static/images/img2.jpg" class="img-fluid"
                            height="300px" alt="this is images">

                    </div>
                    <div class="col-md-6 text-center pt-5">
                        {{!-- Right Side --}}
                        <h3>We work for people, not for money</h3>
                        <p>Lorem ipsum dolor, sit amet consectetur adipisicing
                            elit. Ut iure nobis molestias ea, explicabo
                            laboriosam cupiditate accusantium itaque sapiente
                            atque?</p>
                        <button class="btn btn-primary">Click Here</button>
                    </div>

                </div>
            </div>
        </section>

        {{!-- Contact US section --}}

        <section id="contact_us_section" class="py-5 background1">
            <div class="container">
                <h4 class="text-center text-muted" style="text-decoration-line: underline;">Contact US</h4>
                <div class="row">
                    <div class="col-md-6">
                        <form action="/process-contact-form" method="post">
                            <div class="mb-3">
                                <label for="exampleFormControlInput1"
                                    class="form-label">Name <span>*</span></label>
                                <input name="name" type="text"
                                    class="form-control"
                                    id="exampleFormControlInput1"
                                    placeholder="Enter name...">
                            </div>

                            <div class="mb-3">
                                <label for="exampleFormControlInput1"
                                    class="form-label">Your email address
                                    <span>*</span></label>
                                <input name="email" type="email"
                                    class="form-control"
                                    id="exampleFormControlInput1"
                                    placeholder="name@example.com">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Your mobile number
                                    <span>*</span></label>
                                <input name="mobile" type="number"
                                    class="form-control"
                                    placeholder="8383712937">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Your message <span>*</span></label>
                                <textarea name="message" style="resize: none;"
                                    class="form-control"
                                    placeholder="Hey!, this is your messages"
                                    rows="5"></textarea>
                            </div>

                            <div class="container text-center">
                                <button style=" padding-inline: 28px;"
                                    type="submit" class="btn btn-success btn-lg">Submit</button>
                            </div>
                        </form>

                    </div>
                    
                    <div  class="col-md-6 text-center pt-5">
                        <img class="contact_img" src="/static/images/contact.jpg" width="450" height="420" alt="contact-image">
                    </div>
                </div>
            </div>
        </section>

        {{!-- About Section --}}

        <section id="about_section" class="py-5">
            <div class="container text-center">
                <div class="row">
                    <div class="col-md-12">
