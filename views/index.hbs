        </section>

        {{!-- Services Sections --}}

        <div class="container">
            <section id="services_section" class="pt-3">
                <h1 class="text-center text-secondary">Services that we provide</h1>

                <div class="row mt-5">
                    {{!-- first service column --}}
                    {{#each services}}
                    <div class="col-md-4 pt-2">

                        <div class="card text-center">
                            <div class="card-body">

                                <div class="container text-center py-3">
                                    <i class="{{this.icon}} service_icon"></i>
                                </div>
                                <h5 class="card-title">{{this.title}} </h5>
                                <p>{{this.description}} </p>
                                <a href="{{this.linkText}}"> </a>
                                <a style="text-decoration:none;" href="#"
                                    class="ml-3">{{this.link}}</a>

                            </div>

                        </div>

                    </div>
                    {{/each}}
                </div>

            </section>
        </div>

        {{!-- banner2 section --}}

        <section class="banner2_section py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 text-center pt-5">
                        {{!-- Left Side --}}
